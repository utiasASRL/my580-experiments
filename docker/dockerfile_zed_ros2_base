#### Define base image
# adapted from https://www.stereolabs.com/docs/docker/configure-ros-dockerfile/
FROM stereolabs/zed:3.8-gl-devel-cuda11.4-ubuntu20.04

#### Add ROS2 to base image
ENV LOGNAME root
ENV LANG C.UTF-8
ENV LC_ALL C.UTF-8
ENV ROS_DISTRO "foxy"
ENV ROS2_WS "/my580_ros2_ws"

# install packages
RUN apt-get update || true && apt-get install -q -y --no-install-recommends \
    bash-completion \
    dirmngr \
    gnupg2 \
    lsb-release \
    python3-pip \
    && rm -rf /var/lib/apt/lists/*

# setup sources.list and keys
RUN echo "deb http://packages.ros.org/ros2/ubuntu focal main" > /etc/apt/sources.list.d/ros2-latest.list && \
    apt-key adv --keyserver hkp://keyserver.ubuntu.com:80 --recv-keys C1CF6E31E6BADE8868B172B4F42ED6FBAB17C654

# install bootstrap tools
RUN apt-get update && apt-get install --no-install-recommends -y \
    build-essential \
    git \
    python3-colcon-common-extensions \
    python3-colcon-mixin \
    python3-rosdep \
    python3-vcstool \
    ros-foxy-desktop \
    && rm -rf /var/lib/apt/lists/*

# bootstrap rosdep
RUN rosdep init \
    && rosdep update

# Install the zed-ros2 code
# Create a workspace and clone the zed ros2 repo.
SHELL ["/bin/bash", "-c"] # change default from /bin/sh to /bin/bash
RUN sudo apt update && source /opt/ros/foxy/setup.bash \
&& mkdir -p "${ROS2_WS}/src" \
&& cd "/${ROS2_WS}/src" \
&& git clone --recursive https://github.com/stereolabs/zed-ros2-wrapper.git \
&& cd .. \
&& rosdep install --from-paths src --ignore-src -r -y  \
&& rm -rf /var/lib/apt/lists/*

# Set the working folder at startup
WORKDIR "${ROS2_WS}"

COPY ./rvizconfig.rviz "/${ROS2_WS}/rvizconfig.rviz"
COPY ./ros_entrypoint.sh "/${ROS2_WS}/ros_entrypoint.sh"
ENTRYPOINT ["./ros_entrypoint.sh"]
